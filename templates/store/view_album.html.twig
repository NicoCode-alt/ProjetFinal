{% extends 'base.html.twig' %}

{% block title %}Zictics{% endblock %}

{% block body %}
    <h1>Musicotheque</h1>
    <hr>
    <h3>Les albums</h3>

    <div class="container">
        <div class="shadow d-flex justify-content-between">
            <div>
                <img src="{{ album.images[0].url }}" class="pt-2" alt="Cover" style="width:15vw;">
                <div class="card-body">
                    <h5 class="card-title">
                    {% for artist in album.artists %}
                        <strong>{{ artist.name }}</strong>
                    {% endfor %}<br>
                    {{ album.name }}
                    </h5>
                    <p class="card-text">Sortie le {{ album.release_date }}</p>
                    <p class="card-text"> {{ album.copyrights[0].text }}</p>
                </div>
            </div>
            <div class="d-flex flex-wrap flex-direction: column px-3 ">
                {% for preview in album.tracks.items %} 
                    <div class="px-2">
                        <strong><h6>{{ preview.name }}</h6></strong>
                        <audio controls src="{{ preview.preview_url }}"></audio>
                    </div>
                {% endfor %}
            </div>
                
        </div>
    </div>
    
    


{% endblock %}
