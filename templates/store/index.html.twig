{% extends 'base.html.twig' %}

{% block title %}Zictics{% endblock %}

{% block body %}

    <div class="container_title">
            <div class="row">
                <div class="col-12 text-center mt-3">
                    <h1>Musicotheque</h1>
                </div>
            </div>
            <div class="row justify-content-center mt-5">
                <div class="col-8 text-center">
                    <h2>Faite vos achats en tout tranquillité.</h2>
                </div>

                <div class="col-4 text-center">
                    <button class="btn btn-primary btn-sm" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Rechercher rapide</button>
                </div>
            </div>
        </div>

    <h1>Musicotheque</h1>
    <hr>
    <div class="container d-flex justify-content-around">
        <a href="{{ path('store') }}">Dernières sorties</a>
        <a href="{{ path('search', {id:0}) }}">Les albums</a>
        <a href="{{ path('categories')}}">Les catégories</a>
        <form method="post">
            <input type="text" placeholder="Rechercher un album">
        </form>
    </div>
    <br>
    <h3>Dernieres sorties</h3>
    <div class="row">
        {% for new in newReleases %}
            <div class="card shadow" style="width: 15rem;">
                <img src="{{ new.images[1].url }}" class="card-img-top pt-2" alt="Cover">
                    <div class="card-body">
                        <h5 class="card-title">
                        {% for artist in new.artists %}
                            <strong>{{ artist.name }}</strong>
                        {% endfor %}<br>
                        {{ new.name }}
                        </h5>
                        <p class="card-text">Sortie le {{ new.release_date }}</p>
                        <a href="#" class="btn btn-success">Voir</a>
                    </div>
            </div>
    {% endfor %}
    </div>

    {# <div class="card-body d-flex justify-content-start align-items-center px-5">
        <a href="{{ path('search', {id:id}) }}" class="btn btn-warning btn-lg">
            Voir plus
        </a>
        {% if id < 0 %}
            <p>Page: {{id}}</p>
        {% endif %}
    </div> #}

{% endblock %}
