{% extends 'base.html.twig' %}

{% block title %}Zictics{% endblock %}

{% block body %}
    <h1>Musicotheque</h1>
    <hr>
    <div class="container d-flex justify-content-around">
        <a href="{{ path('store') }}">Dernières sorties</a>
        <a href="{{ path('search', {id:0}) }}">Les albums</a>
        <a href="{{ path('categories')}}">Les catégories</a>
        <form method="post">
            <input type="text" placeholder="Rechercher un album">
        </form>
    </div>
    <br>
    <h2>Les albums</h2>
    
    <div class="card-body d-flex justify-content-start align-items-center px-5">
        <a href="{{ path('search', {id:id}) }}" class="btn btn-warning btn-lg">
            Voir plus
        </a>
        {% if id < 0 %}
            <p>Page: {{id}}</p>
        {% endif %}
    </div>
    <div class="row">       
        {% for album in albums %}
            <div class="card shadow" style="width: 15rem;">
                <img src="{{ album.images[1].url }}" class="card-img-top pt-2" alt="Cover">
                    <div class="card-body">
                        <h5 class="card-title">
                        {% for artist in album.artists %}
                            <strong>{{ artist.name }}</strong>
                        {% endfor %}<br>
                        {{ album.name }}
                        </h5>
                        <p class="card-text">Sortie le {{ album.release_date }}</p>
                        <a href="{{ path('view_album', {id:album.id})}}" class="btn btn-success">Voir</a>
                    </div>
            </div>
        {% endfor %}
            <div class="card-body d-flex justify-content-start align-items-center px-5">
                <a href="{{ path('search', {id:id}) }}" class="btn btn-warning btn-lg">
                    Voir plus
                </a>
                {% if id < 0 %}
                <p>Page: {{id}}</p>
                {% endif %}
            </div>
    </div>
    
    
    


{% endblock %}
