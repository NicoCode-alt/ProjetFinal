<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />        
        {% endblock %}

        {% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-warning">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('critics_index')}}">Ziktics</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ path('critics_index')}}">Les critiques</a>
                    </li>
                    {# {% if app.user %} #}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('create_critic')}}">Ajouter une critique</a>
                    </li>
                    {# <span><strong>Bonjour {{ app.user.username }}</strong></span>
                    {% else %} #}
                </ul>
                    {# {% endif %} #}
                </div>

                <div class="d-flex justify-content-center">
                    <a class="nav-link active" aria-current="page" href="#">Musicotheque</a>
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>

                <div class="d-flex justify-content-end">
                    <a class="nav-link active" aria-current="page" href="{{ path("register") }}">Inscription</a>
                    <a class="nav-link active" aria-current="page" href="{{ path("login") }}">Connexion</a>
                    <a class="nav-link active" aria-current="page" href="{{ path("logout") }}">DÃ©connexion</a>
                </div>
            </div>
        </nav>

        <div class="container pt-3">
            {% block body %}{% endblock %}
        </div>

    </body>
</html>
