<!DOCTYPE html>
<html>
    <head>
        <!-- Meta Tags -->
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}

        {% block stylesheets %}

            <!-- Bootstrap CSS -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

            <!-- Librariesfont-awesome CDN -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
            integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
            crossorigin="anonymous" referrerpolicy="no-referrer" />   

            <!-- Animate on scroll Library CSS -->
    	    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

            <!-- Feuille de style CSS public/style/base.css -->
		    <link rel="stylesheet" href="{{ asset('assets/style/base.css') }}">
        {% endblock %}

        {% block javascripts %}

            <!-- Bootstrap JavaScript -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

            <!-- Animate on scroll Library JavaScript -->
    	    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    	    <!-- JQuery -->
		    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>

        {% endblock %}

        <title>{% block title %}Zikrit{% endblock %}</title>
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('assets/images/favicon-32x32.png') }}" alt="Logo d'une guitare">

    </head>
    <body>

        <header class="header">
			<nav class="navbar navbar-expand-lg navbar-light bg-light shadow rounded">
				<div class="container-fluid">
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div>
						<ul class="navbar-nav justify-content-xl-center">
							<li class="nav-item logo_title_nav">
								<a class="nav-link active" href="{{ path('critics_index')}}"><img class="logo_nav" src="{{ asset('assets/images/guitar_64px.png') }}" alt="Logo d'une guitare" width="40px" height="40px">Zikrit</a>
							</li>
                        </ul>      
					</div>

					<div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
						<ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="{{ path('critics_index')}}">Les critiques</a>
                            </li>
                            <li class="nav-item">
								<a class="nav-link active"  href="#">Musicotheque</a>
							</li>
                                {# {% if app.user %} #}
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="{{ path('create_critic')}}">Ajouter une critique</a>
                            </li>
                                {# <span><strong>Bonjour {{ app.user.username }}</strong></span>
                                {% else %} #}
                                {# {% endif %} #}
							<li class="nav-item">
								<a class="nav-link active" href="{{ path('register')}}">Inscription</a>
							</li>
							<li class="nav-item">
								<a class="nav-link active" href="{{ path('login')}}">Connexion</a>
							</li>
                            <li class="nav-item">
								<a class="nav-link active" href="{{ path('logout')}}">Déconnexion</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>

            {% block body %}
                
            {% endblock %}

        <footer>
            <div class="row responsive_footer">
                <div class="col-4 text-center copyright">
                    <div>
                        <p><img src="{{ asset('assets/images/copyright.png') }}" width="40px" height="40px" alt="Logo copyright">opyright 2021</p>
                        <p class="p_footer">Produit destiner à l'obtention de la certification Front & Back end de WebForce3.</p>
                        <img class="" src="{{ asset('assets/images/guitar_64px.png') }}" width="64px" height="64px" alt="Logo d'une guitare">
                        
                    </div>
                </div>

                <div class="col-4 text_typing">
                    <div class="typing">
                        <p class="typewrite"></p>
                    </div>
                </div>

                <div class="col-4 logo_footer">
                    <div>
                        <div>
                            <a href="">
                                <img src="{{ asset('assets/images/facebook.png') }}" width="40px" height="40px" alt="Logo facebook">
                            </a>
                            <a href="">
                                <img src="{{ asset('assets/images/instagram.png') }}" width="40px" height="40px" alt="Logo instagram">
                            </a>
                            <a href="">
                                <img src="{{ asset('assets/images/linkedin.png') }}" width="40px" height="40px" alt="Logo linkedin">
                            </a>
                        </div>
                        
                        <div>
                            <a href="">
                                <img src="{{ asset('assets/images/github-logo.png') }}" width="40px" height="40px" alt="Logo github">
                            </a>
                            <a href="">
                                <img src="{{ asset('assets/images/twitter.png') }}" width="40px" height="40px" alt="Logo twitter">
                            </a>
                            <a href="">
                                <img src="{{ asset('assets/images/youtube.png') }}" width="40px" height="40px" alt="Logo youtube">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        <script>AOS.init();</script>
        <script src="{{ asset('assets/javaScript/base.js') }}"></script>

    </body>
</html>
