<a class="boutonLike btn {% if like is not null and like.value == 1 %} btn-success {% endif %}" data-action="like" href="{{ path("like", {id: critic.id}) }}">
    <span class="nombreLikes">{{ critic.goodLikes|length }}</span>
    <i class="far fa-thumbs-up"></i>
</a> 
<a class="boutonLike btn {% if like is not null and like.value == 0 %} btn-danger {% endif %}" data-action="dislike" href="{{ path("like", {id: critic.id}) }}">
    <span class="nombreLikes">{{ critic.badLikes|length }}</span>
    <i class="fas fa-thumbs-down"></i>
</a>