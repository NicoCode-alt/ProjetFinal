{% extends 'base.html.twig' %}

{% block title %}Zikrit{% endblock %}

{% block body %}

    <section class="start">
        <div class="background_critics">
            <div class="overlay_critics">
                <div class="container_title">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h1 class="title anim_title">Zikrit</h1>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 text-center" data-aos="zoom-in" data-aos-duration="3000" data-aos-delay="2100">
                            <h2 class="title_welcome">vous souhaite la bienvenue.</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>	
    </section>

    <div class="row justify-content-center">
        <div class="col-8">
            <hr>
            <h3 class="text-center">Les critiques de musique</h3>
        </div>
    </div>

    <div class="container flex-nowrap">
            <div class="row responsive_card">
                {% for critic in critics %}
       
                    <div class="col-6 responsive_width">
                        <div class="card m-4 shadow rounded gradient">
                        
                            <img src="https://source.unsplash.com/1024x200" class="image_card img-fluid rounded-start" alt="photo d'album">
                        
                                <div class="card-body">
                                    <h4 class="card-title text-center">Critique de :</h4>
                                    <div class="user">
                                        <p>{{ critic.user.username }}</p>
                                        <p>Le {{ critic.createdAt | date("d/m/Y Ã  H:i") }}</p>
                                    </div>
                                    <div class="comment mt-1">
                                        <h5 class="text-center">Commentaire critique</h5>
                                        <p>
                                        {{ critic.content[:25 ] ~ '[...]'}}
                                        </p>

                                {# Debut partie rating #}
                                <p>Sa note : {{ critic.rating }} / 10 
                                    {% if critic.rating == 0 %}
                                        {% for i in 1..10 %}
                                            <i class="far fa-star"></i>
                                        {% endfor %}
                                        {% elseif critic.rating == 10 %}
                                            {% for i in 1..10 %}
                                                <i class="fas fa-star"></i>
                                            {% endfor %}
                                        {% else %}
                                            {# Boucle Etoiles pleines #}
                                            {% for i in 1..critic.rating %}
                                                <i class="fas fa-star"></i>
                                            {% endfor %}
                                            {# Boucle Etoiles vides #}
                                            {% for i in 1..10-critic.rating %}
                                                <i class="far fa-star"></i>
                                            {% endfor %}
                                    {% endif %}
                                {# Fin partie rating #}

                                    </div>
                                    <div class="fonction">
                                        <div class="like_dislike">
                                        <a class="boutonLike btn" data-action="like" href="{{ path("like", {id: critic.id}) }}">
                                            <span class="nombreLikes">{{ critic.likes|length }}</span>
                                            <i class="far fa-thumbs-up"></i>
                                        </a> 
                                        <a class="boutonLike btn" data-action="dislike" href="{{ path("like", {id: critic.id}) }}">
                                            <span class="nombreLikes">{{ critic.likes|length }}</span>
                                            <i class="fas fa-thumbs-down"></i>
                                        </a> 
                                        </div>
                                        <a class="btn btn-primary btn-sm" href="{{ path('view_critic', {id:critic.id}) }}">En voir plus ...</a>
                                    </div>                                
                                </div>
                        </div>
                    </div>
                    
                {% endfor %}   
            </div>
    </div>

{% endblock %}


{% block javascripts %}
    <script src="{{ asset('assets/javaScript/like.js') }}"></script>
{% endblock %}

